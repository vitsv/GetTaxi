@{
    var msg = ViewData["MsgText"];
    var render = ViewData["MsgIsRender"] as bool?;
    var partial = ViewData["MsgPartialName"] as string;
    var type = ViewData["MsgType"];
}


@if (type != null)
{
    <div class="alert @type">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        @if (@render.GetValueOrDefault())
        {
            Html.RenderPartial(partial);
        }
        else
        {
            @Html.Raw(msg)
        }
    </div>
}
