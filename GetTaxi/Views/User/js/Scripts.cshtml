<script type="text/javascript">

    function ReseandSMS() {
        var url = '@Url.Action("ResendActivateSms", "User")';
       $.ajax({
           type: "POST",
           url: url,
           success: function (data) {
               $("#af_activate_user .alert").removeClass("alert-danger");
               $("#af_activate_user .alert").removeClass("alert-success");
               if (data.result == "OK") {
                   $("#af_activate_user .alert").addClass("alert-success");
                   $("#af_activate_user .alert").html(data.msg);
               } else {
                   $("#af_activate_user .alert").addClass("alert-danger");
                   $("#af_activate_user .alert").html(data.msg);
               }
               $("#af_activate_user .alert").show();
           },
           error: function (data) {
               alert(data);
           }
       })
   }
</script>
