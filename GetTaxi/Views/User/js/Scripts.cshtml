<script type="text/javascript">

    function Remove(id) {
        if (id != null) {
            if (confirm("Are you sure?")) {
                var url = '@Url.Action("Delete", "User")';
                $.ajax({
                    type: "POST",
                    url: url,
                    data: { id: id },
                    success: function (data) {
                        if (data.result == "OK") {
                            location.reload();
                        }
                        else
                            alert(data.msg);
                    },
                    error: function (data) {
                        alert(data);
                    }
                })
            }
        }
    }
</script>
