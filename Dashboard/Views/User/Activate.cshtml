@model Dashboard.Models.User.ActivateModel
@using (Ajax.BeginForm("Activate", "User", new AjaxOptions { UpdateTargetId = "af_activate_user", HttpMethod = "POST", InsertionMode = InsertionMode.Replace }, new { id = "af_activate_user" }))
{
    <h2>Aktywacja konta</h2>
    <div class="alert fade in alert-success" style="display: none"></div>
    <p>
        Prosze wpisać kod z wiadomości SMS ktora za chwile Pańwstwo otrzymaja na podany pod czas rejestracji numer.
    </p>
    <div class="editor-label">
        Kod
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Code)
        @Html.ValidationMessageFor(model => model.Code)
    </div>
    
    <p>
        <input type="submit" value="OK" />
    </p>
    <p>
        <a href="#" onclick="ReseandSMS()">Wysłać kod jeszcze raz</a>
    </p>
}

@Html.Partial("js/Scripts")
